{
    "files.autoSave": "afterDelay", // Sauvegarde automatique après un délai
    "editor.mouseWheelZoom": true, // Zoom avec la molette de la souris
    "workbench.colorTheme": "Night Owl", // Thème de couleur (Night Owl)
    "workbench.iconTheme": "material-icon-theme",
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.formatOnPaste": true,
    "workbench.sideBar.location": "right",
    "debug.onTaskErrors": "abort",
    "editor.minimap.enabled": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    "explorer.confirmDelete": false,
    "github.copilot.nextEditSuggestions.enabled": true, // Copilot suggestions
    "editor.defaultFormatter": "esbenp.prettier-vscode", // Prettier as default formatter
    "editor.formatOnSave": true, // Format on save
}